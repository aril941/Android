<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e24755"
    tools:context=".kubus">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="87dp"
        app:srcCompat="@drawable/judul2" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="204dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="517dp"
        app:srcCompat="@drawable/kubus" />

    <TextView
        android:id="@+id/sisi6"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="478dp"
        android:text="Panjang Sisi" />

    <EditText
        android:id="@+id/input_kubus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="428dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/hitungkubus"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="360dp"
        android:background="#00C853"
        android:onClick="hitung_kubus"
        android:text="HITUNG"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/res9"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="319dp"
        android:text="Hasil Luas" />

    <TextView
        android:id="@+id/hasil_luasKbs"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="273dp"
        android:background="#FFF9C4"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/res10"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="240dp"
        android:text="Hasil Volume" />

    <TextView
        android:id="@+id/hasil_VolKbs"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="195dp"
        android:background="#F8BBD0"
        android:textSize="34sp" />

    <Button
        android:id="@+id/clear4"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="238dp"
        android:background="#00C853"
        android:onClick="reset"
        android:text="CLEAR"
        android:textColor="@color/white" />
</RelativeLayout>