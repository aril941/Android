<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24b0af"
    tools:context=".lingkaran">

    <TextView
        android:id="@+id/sisi7"
        android:layout_width="212dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="406dp"
        android:text="Panjang Diameter (d=2 x jari-jari)" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="87dp"
        app:srcCompat="@drawable/judul" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="197dp"
        android:layout_height="104dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="517dp"
        app:srcCompat="@drawable/lingkaran" />

    <TextView
        android:id="@+id/sisi5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="478dp"
        android:text="Panjang Jari-jari" />

    <EditText
        android:id="@+id/input_jari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="428dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/hitung_lingk"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="323dp"
        android:background="#00C853"
        android:onClick="hitung_lingkaran"
        android:text="HITUNG"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/res7"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="282dp"
        android:text="Hasil Luas" />

    <TextView
        android:id="@+id/res8"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="203dp"
        android:text="Hasil Keliling" />

    <TextView
        android:id="@+id/kel_lingkaran"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="159dp"
        android:background="#F8BBD0"
        android:textSize="34sp" />

    <Button
        android:id="@+id/clear3"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="201dp"
        android:background="#00C853"
        android:onClick="reset"
        android:text="CLEAR"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/luas_lingkaran"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="236dp"
        android:background="#FFF9C4"
        android:textSize="34sp" />

</RelativeLayout>