<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailBarang"
    android:background="#fcfcfc">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="-15dp"
                android:clickable="true"
                app:icon="@drawable/ic_back_pt" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_search"
                android:gravity="left|center_vertical"
                android:text="Cari produk..."
                android:textAllCaps="false"
                android:layout_marginRight="15dp"
                android:textColor="#777C75"/>
            <Button
                android:id="@+id/share"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:clickable="true"
                android:paddingLeft="4dp"
                app:icon="@drawable/ic_share" />

            <Button
                android:id="@+id/troli"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:paddingLeft="4dp"
                app:icon="@drawable/ic_troli" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_detail"
                android:layout_marginTop="-130dp"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="#2d2d2d"
                android:src="@drawable/p1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/harga_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/harga1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/judul_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:text="@string/text1"
                android:textSize="19sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Detail Produk"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/desc1"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/rmv_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_remove"
                android:background="@color/transparent"
                android:layout_marginTop="60dp"
                android:padding="2dp"
                android:layout_marginLeft="-40dp"/>
            <TextView
                android:id="@+id/edit_qty"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:text="1"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@color/transparent"
                android:layout_marginTop="-60dp"
                android:layout_marginLeft="2dp"/>
            <ImageButton
                android:id="@+id/add_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_add"
                android:background="@color/transparent"
                android:layout_marginTop="-60dp"
                android:layout_marginLeft="58dp"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="15dp"
                android:text="Total Harga : "
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/totalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-25dp"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-53dp"
        android:layout_marginLeft="4dp"
        android:paddingTop="8dp"
        android:background="@drawable/chat_border"
        android:drawableTop="@drawable/ic_chat"
        android:layout_marginBottom="3dp"
        android:id="@+id/chat"/>
    <Button
        android:id="@+id/cart_button"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-53dp"
        android:background="@drawable/border"
        android:text=" + Keranjang"
        android:textSize="16sp"
        android:layout_marginLeft="60dp"/>


</LinearLayout>